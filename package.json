{
  "name": "trpg-scenario-maker",
  "packageManager": "bun@1.3.1",
  "private": true,
  "scripts": {
    "build": "bunx --bun turbo build",
    "lint": "turbo lint",
    "ncu": "turbo ncu --force && ncu -u",
    "test": "vitest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "@vitejs/plugin-react": "^5.0.4",
    "vite": "npm:rolldown-vite@7.1.19",
    "vite-tsconfig-paths": "^6.0.0-beta.4",
    "vitest": "^4.0.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "babel-plugin-react-compiler": "^19.1.0-rc.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    },
    "catalogs": {
      "testing": {
        "eslint": "^9.38.0"
      }
    }
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.19"
  }
}
