{
  "name": "trpg-scenario-maker",
  "packageManager": "bun@1.3.2",
  "private": true,
  "scripts": {
    "build": "bunx --bun turbo build",
    "lint": "turbo lint",
    "ncu": "turbo ncu --force && ncu -u",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:report": "vitest run --reporter=html --reporter=json",
    "test:report-view": "vite preview --outDir test-results"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.2.4",
    "vite-tsconfig-paths": "^6.0.0-beta.4",
    "vitest": "^4.0.8"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "react-router": "^7.9.5",
      "date-fns": "^4.1.0",
      "@types/node": "24.10.0"
    },
    "catalogs": {
      "testing": {
        "eslint": "^9.38.0",
        "@vitest/browser": "^4.0.8"
      },
      "building": {
        "typescript": "^5.9.3"
      }
    }
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.4"
  }
}
