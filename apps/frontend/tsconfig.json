{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "module": "nodenext",
    "lib": ["ESNext", "dom"],
    "composite": true,
    "noEmit": true, // https://zenn.dev/hayato94087/articles/d05b3eb7de1fcf
    "allowImportingTsExtensions": true, //  import のパス名に .ts のまま記述を許可
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals"]
  }
}
